<% 
##
## Gabarit principal
##
## C'est `app', l'instance de l'application, qui est bindée à la vue
##
%>
<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv='Content-type' content='text/html; charset=utf-8'>
    <% 
      titre = article.titre
      titre = "Accueil" if titre.to_s.strip == "" && article.name != "_tdm_.erb"
    %>
    <title><%= name %> - <%= titre %></title>
    <%= stylesheets %>
    <%= javascripts %>
  </head>
  <body>
    <%= view 'gabarit/header'   %>
    <%= view 'gabarit/content'  %>
    <%= view 'gabarit/rmargin'  %>
    <%= view 'gabarit/footer'   %>
    <% 
    ##
    ## Débug si on est en offline
    ##
    %>
    <%= debug %>
  </body>
</html>